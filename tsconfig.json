{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": [
      "node_modules",
      "docs",
      "dist",
      "coverage",
      ".github",
      ".vscode",
      ".devcontainer"
  ]
}
